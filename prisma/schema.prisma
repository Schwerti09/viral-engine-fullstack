generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sessions    Session[]
  workspaces  WorkspaceMember[]
  ideas       Idea[]
  trendAlerts TrendAlert[]
  metrics     MetricSnapshot[]
  auditLogs   AuditLog[]
  apiKeys     ApiKey[]
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  revokedAt DateTime?
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   WorkspaceMember[]
  projects  Project[]
  invites   WorkspaceInvite[]
  apiKeys   ApiKey[]
  auditLogs AuditLog[]
}

model WorkspaceInvite {
  id          String   @id @default(cuid())
  workspaceId String
  email       String
  role        WorkspaceRole @default(MEMBER)
  token       String   @unique
  acceptedAt  DateTime?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([email])
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  role        WorkspaceRole @default(OWNER)
  userId      String
  workspaceId String
  createdAt   DateTime      @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
}

model Project {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  niche       String
  voice       String   @default("klar, humorvoll, sachlich")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace   Workspace        @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  ideas       Idea[]
  trendAlerts TrendAlert[]
  metrics     MetricSnapshot[]

  @@index([workspaceId])
}

model TrendAlert {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  kind      String // sound | hashtag | format
  title     String
  velocity  Float // growth score
  region    String   @default("DE")
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
}

model Idea {
  id         String   @id @default(cuid())
  userId     String
  projectId  String
  hook       String
  script     String
  shotlist   String
  viralScore Int      @default(50)
  createdAt  DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, createdAt])
}

model MetricSnapshot {
  id        String   @id @default(cuid())
  userId    String
  projectId String
  date      DateTime
  views     Int
  likes     Int
  comments  Int
  shares    Int
  followers Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, date])
  @@index([projectId])
}

model ApiKey {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  name        String
  prefix      String
  hash        String
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  revokedAt   DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@index([prefix])
}

model AuditLog {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  action      String
  meta        Json?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId, createdAt])
  @@index([userId, createdAt])
}
